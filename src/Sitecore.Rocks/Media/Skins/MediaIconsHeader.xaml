<UserControl x:Class="Sitecore.Rocks.Media.Skins.MediaIconsHeader" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="Grid" Margin="4" MaxWidth="240">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image x:Name="IconImage" Grid.Column="0" Grid.Row="0" RenderOptions.BitmapScalingMode="NearestNeighbor" VerticalAlignment="Top" Width="240" Height="180">
            <Image.BitmapEffect>
                <DropShadowBitmapEffect Color="Black" Direction="320" ShadowDepth="1" Softness="0.5" Opacity="0.5" />
            </Image.BitmapEffect>
        </Image>

        <TextBlock x:Name="ItemName" Grid.Column="0" Grid.Row="1" Height="Auto" Margin="0,2,0,0" TextWrapping="Wrap" HorizontalAlignment="Center" />
    </Grid>

</UserControl>