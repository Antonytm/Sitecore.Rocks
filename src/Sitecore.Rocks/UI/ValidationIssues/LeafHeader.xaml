<UserControl x:Class="Sitecore.Rocks.UI.ValidationIssues.LeafHeader" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" MouseLeftButtonDown="HandleClick" d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image x:Name="IconImage" Margin="0,0,4,0" />

        <TextBlock x:Name="TextBlock" Grid.Column="1" />

        <TextBlock x:Name="Leaves" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" Margin="8,0,0,0" Grid.Column="2" />
    </Grid>
</UserControl>