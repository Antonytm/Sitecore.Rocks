<UserControl x:Class="Sitecore.Rocks.UI.Packages.PackageManagers.PackageListBoxItem" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">

    <Grid Height="66" Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel HorizontalAlignment="Left">
            <TextBlock x:Name="NameTextBlock" FontWeight="Bold" />
            <TextBlock x:Name="ReadmeTextBlock" TextWrapping="Wrap" TextTrimming="WordEllipsis" MaxHeight="42" Margin="0,2,0,0" />
        </StackPanel>

        <StackPanel x:Name="ButtonPanel" Grid.Column="1" Margin="8,4,6,4" Visibility="Collapsed">
            <Button x:Name="InstallButton" Content="Install" Width="75" Height="21" HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>
</UserControl>