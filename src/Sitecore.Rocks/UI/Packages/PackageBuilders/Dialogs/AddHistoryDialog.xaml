<Window x:Class="Sitecore.Rocks.UI.Packages.PackageBuilders.Dialogs.AddHistoryDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:c="clr-namespace:Sitecore.Rocks.Controls.HistoryListViews" Title="Add Items From History" Height="600"
    Width="800" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <c:HistoryListView x:Name="ListView" />

        <StackPanel Grid.Row="1" Margin="0,8,0,0" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="OK" IsDefault="True" Click="OkClick" Width="75" Height="23" />
            <Button Content="Cancel" IsCancel="True" Width="75" Height="23" Margin="8,0,0,0" />
        </StackPanel>
    </Grid>
</Window>