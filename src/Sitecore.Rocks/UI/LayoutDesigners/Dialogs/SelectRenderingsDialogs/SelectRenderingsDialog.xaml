<Window x:Class="Sitecore.Rocks.UI.LayoutDesigners.Dialogs.SelectRenderingsDialogs.SelectRenderingsDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Select Renderings" Height="800" Width="1000"
    Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TabControl x:Name="PanesTabControl" SelectionChanged="ChangeActiveTab" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0" Grid.Row="1">
            <Button x:Name="OkButton" Content="OK" IsDefault="True" Click="OkClick" Width="75" Height="23" />
            <Button Content="Cancel" IsCancel="True" Margin="8,0,0,0" Width="75" Height="23" />
        </StackPanel>
    </Grid>
</Window>