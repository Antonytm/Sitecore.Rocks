<UserControl x:Class="Sitecore.Rocks.UI.LayoutDesigners.Controls.RenderingButton" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">

    <Border Width="150" Height="20" Background="White" BorderThickness="1" BorderBrush="#cccccc" Padding="4,1,4,1" Margin="1">
        <StackPanel Orientation="Horizontal">
            <Image x:Name="IconImage" Source="/Sitecore.Rocks;component/Resources/16x16/bullet_square_blue.png" Width="16" Height="16" SnapsToDevicePixels="True" />
            <TextBlock x:Name="LabelTextBlock" VerticalAlignment="Center" TextAlignment="Left" TextTrimming="CharacterEllipsis" Margin="4,0,0,0" />
        </StackPanel>
    </Border>
</UserControl>