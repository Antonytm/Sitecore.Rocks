<Window x:Class="Sitecore.Rocks.UI.Management.ManagementItems.Validations.Dialogs.BuildTasks.BuildTaskDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Sitecore.Rocks.UI.Management.ManagementItems.Validations.Dialogs.BuildTasks" Width="800" SizeToContent="Height" Title="Build Task"
    Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <c:BuildTaskBuilder x:Name="Builder" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0" Grid.Row="1">
            <Button x:Name="CloseButton" Content="Close" IsDefault="True" IsCancel="True" Click="OkClick" Width="75" Height="23" />
        </StackPanel>
    </Grid>
</Window>