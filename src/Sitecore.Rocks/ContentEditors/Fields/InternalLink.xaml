<UserControl x:Class="Sitecore.Rocks.ContentEditors.Fields.InternalLinkField" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="Auto" mc:Ignorable="d"
    x:Name="Control">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="InternalLinkTextBox" TextChanged="RaiseModified" VerticalAlignment="Center" MinHeight="21" VerticalContentAlignment="Center" />
        <Button Content="Browse" Grid.Column="1" Margin="4,0,0,0" Width="75" Click="Browse" Height="21" VerticalAlignment="Center" />
    </Grid>
</UserControl>