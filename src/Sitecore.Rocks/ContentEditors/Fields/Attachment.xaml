<UserControl x:Class="Sitecore.Rocks.ContentEditors.Fields.Attachment" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" BorderThickness="1"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" DragOver="HandleDragOver" Drop="HandleDrop" Width="Auto" Padding="8"
        ContextMenuOpening="OpenContextMenu" HorizontalAlignment="Left">
        <Image x:Name="Image" Height="80" HorizontalAlignment="Left">
            <Image.BitmapEffect>
                <DropShadowBitmapEffect Color="Black" Direction="320" ShadowDepth="1" Softness="0.5" Opacity="0.5" />
            </Image.BitmapEffect>
        </Image>
    </Border>
</UserControl>