<UserControl x:Class="Sitecore.Rocks.Controls.NotificationBar.NotificationBar" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:a="clr-namespace:Sitecore.Rocks.Applications" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderThickness="0,1,0,1" Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}" Padding="8,4,8,4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ContentPresenter x:Name="Inner" Grid.Column="0" VerticalAlignment="Center" />

            <Button Content="Thanks, got it" Grid.Column="1" Click="Close" Height="21" VerticalAlignment="Top" Margin="8,0,0,0" />
        </Grid>
    </Border>

</UserControl>