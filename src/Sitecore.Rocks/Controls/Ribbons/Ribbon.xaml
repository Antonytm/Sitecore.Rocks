<UserControl x:Class="Sitecore.Rocks.Controls.Ribbons.Ribbon" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:f="urn:fluent-ribbon" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300" IsTabStop="False"
    KeyboardNavigation.IsTabStop="False" Padding="4" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Fluent;Component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <f:Ribbon x:Name="FluentRibbon" CanMinimize="True" IsTabStop="False" KeyboardNavigation.IsTabStop="False" IsQuickAccessToolBarVisible="False"
        f:RibbonProperties.TitleBarHeight="0" />
</UserControl>